<?xml version="1.0"?>
<robot name="roboto">

  <!-- Base del carrito de forma rectangular -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.2" />
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.8"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="10.0"/> 
      <inertia ixx="0.025" iyy="0.025" izz="0.01" ixy="0.0" ixz="0.0" iyz="0.0"/> 
    </inertial>
  </link>

  <!-- Rueda delantera izquierda -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"/>
      <color rgba="0.1 0.1 0.1 1.0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.00025" iyy="0.00025" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Rueda delantera derecha -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"/>
      <color rgba="0.0 0.0 0.0 1.0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.00025" iyy="0.00025" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Rueda trasera izquierda -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"/>
      <color rgba="0.0 0.0 0.0 1.0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.00025" iyy="0.00025" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Rueda trasera derecha -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"/>
      <color rgba="0.0 0.0 0.0 1.0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.00025" iyy="0.00025" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- En esta secciÃ³n son ingresados las uniones de las ruedas a la base del carrito  -->
 <!-- El primer joint es de la rueda delantera izquierda  -->
  <joint name="front_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.25 0.15 -0.1" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>


<!-- joint es de la rueda delantera derecha  -->
  <joint name="front_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.25 -0.15 -0.1" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

<!-- joint es de la rueda trasera izquierda -->
  <joint name="rear_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.25 0.15 -0.1" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

<!-- joint es de la rueda trasera derecha -->
  <joint name="rear_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.25 -0.15 -0.1" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
